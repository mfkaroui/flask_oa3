    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Unit Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["--cov=./flask_oa3", "--cov-report=term-missing", "--cov-config=.coveragerc"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Linting",
            "type": "python",
            "request": "launch",
            "module": "pylint",
            "args": ["flask_oa3"],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Build Licenses",
            "type": "python",
            "request": "launch",
            "program": "./flask_oa3/open_api_3/license",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Build Responses",
            "type": "python",
            "request": "launch",
            "program": "./flask_oa3/open_api_3/response",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Build Media Types",
            "type": "python",
            "request": "launch",
            "program": "./flask_oa3/open_api_3/media_type",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Build Documentation",
            "type": "python",
            "request": "launch",
            "module": "pdoc",
            "args": ["--force", "--html", "-o", "./docs", "flask_oa3"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ]
}